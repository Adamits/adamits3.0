<div class="col-md-8 col-sm-8">
	<div class="row">
	 <b><%= @post.title %></b>
	</div>
  <div class="row">
  <div class="js-term-extraction">
    <div class="js-extract-button">
      Extract
    </div>
    <div class="post-content" data-extracted-terms="<%= @extracted_terms %>">
  	 <%= @post.content %></br>
    </div>
  </div>
  	<% if current_user && current_user.admin %>
  	  <div class="row">
  	    <div class="col-md-2">
  	      <b>Tag</b>
  	    </div>
  	    <div class="col-md-2">
  	      <b>Term Score</b>
  	    </div>
  	  </div>
      <% @tags_hash.each do |tag, term_score| %>
        <div class="row">
          <div class="col-md-2">
            <%= tag %> </br>
          </div>
          <div class="col-md-2">
            <%= term_score %> </br>
          </div>
        </div>
      <% end %>
      </br>
      <%= link_to edit_admin_post_path do %>
        Edit
      <% end %>
    <% end %>
  </div>
</div>
