<div class="row nmh-4">
  <div class="col-sm-8 col-sm-offset-2 ph-4">
    <h1 class="text-center"><%= @post.title %></h1>
    <div class="js-term-extraction">
      <div class="js-term-extraction-content pv-6" data-extracted-terms="<%= @extracted_terms %>">
    	 <%= @post.content %></br>
      </div>
       <div class="js-extract-button btn btn-default">
        Extract Terms
      </div>
      <div class="js-clear-extract-button btn btn-default hide">
        Clear Highlight
      </div>
    </div>
  </div>
</div>
<% if current_user && current_user.admin %>
  <div class="row nmh-4">
    <div class="col-sm-2 col-sm-offset-2 ph-4">
      <b>Tag</b>
    </div>
    <div class="col-sm-2 ph-4">
      <b>Term Score</b>
    </div>
  </div>
  <% @tags_hash.each do |tag, term_score| %>
    <div class="row nmh-4">
       <div class="col-sm-2 col-sm-offset-2 ph-4">
        <%= tag %> </br>
      </div>
      <div class="col-sm-2 ph-4">
        <%= term_score %> </br>
      </div>
    </div>
  <% end %>
  </br>
  <%= link_to edit_admin_post_path, class: "btn btn-success" do %>
    Edit
  <% end %>
  <%= link_to admin_post_path, method: :delete, class: "btn btn-danger" do %>
    Delete
  <% end %>
<% end %>
