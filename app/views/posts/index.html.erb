<% if current_user && current_user.admin %>
  <div class="row mt-8">
    <div class="col-xs-6 col-sm-4 col-sm-offset-2 col-md-2 col-md-offset-4">
      <%= link_to "Update All", update_all_admin_posts_path, class: "btn btn-success btn-block" %>
    </div>
    <div class="col-xs-6 col-sm-4 col-md-2">
      <%= link_to "New Post", new_admin_post_path, class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>
<div class="pv-8">
  <% @posts.each_slice(3) do |posts_row| %>
    <div class="row nmh-4">
      <% posts_row.each do |post| %>
        <div class="col-md-4 ph-1 pt-4">
        	<div class="bwa-1 bs-sld bc-5 bgc-white pa-4" style="min-height: 170px">
    	      <h4><%= post.title %></h4>
    	      <div class="pt-4">
    	      	<%= post.content[0, 200]  %>...
    	      	<%= link_to post, class: "c-blue-link" do %>
    		        Read More
    		      <% end %>
    		    </div>
    		  </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
